<?xml version = "1.0" encoding = "ISO-8859-1"?>

<!DOCTYPE controllers SYSTEM "dtds/controllers.dtd">

<!-- 
Controllers doc: 
https://www.openxava.org/OpenXavaDoc/docs/controllers_en.html

Default controllers included in OpenXava (you can extend from them):
https://github.com/openxava/openxava/blob/master/openxava/src/main/resources/xava/default-controllers.xml
 
Examples of controllers (from test application):
https://github.com/openxava/openxava/blob/master/openxavatest/src/main/resources/xava/controllers.xml
-->

<controllers>
    
    <!-- Environment variable:
    <env-var name="ClinicaDelValle_DEFAULT_YEAR" value="2015"/> 
    -->
    
    <!-- Session object:
    <object name="ClinicaDelValle_activeYear" class="java.lang.Integer" value="2015" 
    	    scope="global"/>    
    -->
    
    <!-- Controller:
    <controller name="Teacher">
    	<extends controller="Typical"/>
    	<action name="new" icon="plus-box-multiple" keystroke="Control N"
        	class="actions.CreateTeacher">
    	</action>
	</controller>    
    -->
    <controller name="CitaController">
        <extends controller="Typical"/>
        <action name="validarConflictos" mode="detail"
                class="org.example.ClinicaDelValle.actions.ValidarConflictosAction"
                icon="check-circle"
                keystroke="Control V"/>
    </controller>
    <controller name="ExpedienteController">
        <extends controller="Typical"/>
        <action name="generarPdf" mode="detail"
                class="org.example.ClinicaDelValle.actions.GenerarPdfAction"
                icon="file-pdf"
                keystroke="Control P"/>
    </controller>
    <!-- Controlador para Receta: Agrega acción para descontar stock -->
    <controller name="RecetaController">
        <extends controller="Typical"/>
        <action name="descontarStock" mode="detail"
                class="org.example.ClinicaDelValle.actions.DescontarStockAction"
                icon="minus-circle"/>
    </controller>
    <!-- Modificar acción save estándar (ejemplo del maestro) -->
    <controller name="MiCRUD">
        <extends controller="Typical"/>
        <action name="save" mode="detail"
                by-default="if-possible"
                class="org.example.ClinicaDelValle.actions.MiSaveAction"
                image="save.gif"
                icon="content-save"
                keystroke="Control S"/>
    </controller>
</controllers>
