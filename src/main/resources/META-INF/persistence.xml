<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
             version="1.0">

    <persistence-unit name="default">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <non-jta-data-source>java://comp/env/jdbc/ClinicaDelValleDS</non-jta-data-source>
        <class>org.openxava.session.GalleryImage</class>
        <class>org.openxava.web.editors.DiscussionComment</class>
        <class>com.openxava.naviox.model.ConfigurationRecord</class>
        <class>com.openxava.naviox.model.Folder</class>
        <class>com.openxava.naviox.model.History</class>
        <class>com.openxava.naviox.model.Module</class>
        <class>com.openxava.naviox.model.ModuleRights</class>
        <class>com.openxava.naviox.model.Organization</class>
        <class>com.openxava.naviox.model.Role</class>
        <class>com.openxava.naviox.model.SessionRecord</class>
        <class>com.openxava.naviox.model.SSORecord</class>
        <class>com.openxava.naviox.model.User</class>
        <class>com.openxava.naviox.model.LDAPConfiguration</class>
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="update"/>
        </properties>
    </persistence-unit>

    <!-- JUnit Hypersonic -->
    <persistence-unit name="junit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>org.openxava.web.editors.DiscussionComment</class>
        <class>com.openxava.naviox.model.ConfigurationRecord</class>
        <class>com.openxava.naviox.model.Folder</class>
        <class>com.openxava.naviox.model.History</class>
        <class>com.openxava.naviox.model.Module</class>
        <class>com.openxava.naviox.model.ModuleRights</class>
        <class>com.openxava.naviox.model.Organization</class>
        <class>com.openxava.naviox.model.Role</class>
        <class>com.openxava.naviox.model.SessionRecord</class>
        <class>com.openxava.naviox.model.SSORecord</class>
        <class>com.openxava.naviox.model.User</class>
        <class>com.openxava.naviox.model.LDAPConfiguration</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:hsqldb:hsql://localhost:1666"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="ClinicaDelVallePU" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:comp/env/jdbc/ClinicaDelValleDS</jta-data-source><!-- Referencia al JNDI de context.xml -->
        <class>org.example.ClinicaDelValle.model.Usuario</class>
        <class>org.example.ClinicaDelValle.model.Paciente</class>
        <class>org.example.ClinicaDelValle.model.ExpedienteDigital</class>
        <class>org.example.ClinicaDelValle.model.Cita</class>
        <class>org.example.ClinicaDelValle.model.HistoriaClinica</class>
        <class>org.example.ClinicaDelValle.model.Receta</class>
        <class>org.example.ClinicaDelValle.model.MedicamentoRecetado</class>
        <class>org.example.ClinicaDelValle.model.OrdenExamen</class>
        <class>org.example.ClinicaDelValle.model.ResultadoExamen</class>
        <class>org.example.ClinicaDelValle.model.ArchivoAdjunto</class>
        <class>org.example.ClinicaDelValle.model.Factura</class>
        <class>org.example.ClinicaDelValle.model.DetalleFactura</class>
        <class>org.example.ClinicaDelValle.model.Auditoria</class>
        <class>org.example.ClinicaDelValle.model.Sala</class>
        <class>org.example.ClinicaDelValle.model.Laboratorio</class>
        <class>org.example.ClinicaDelValle.model.AccesoExpediente</class>
        <class>org.example.ClinicaDelValle.model.Medicamento</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>  <!-- Crea tablas automÃ¡ticamente -->
            <property name="hibernate.show_sql" value="true"/>  <!-- Opcional: muestra queries -->
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>

</persistence>